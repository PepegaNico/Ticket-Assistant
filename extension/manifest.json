{
  "manifest_version": 3,
  "name": "Remedy Ticket Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for BMC Remedy SmartIT service desk agents",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.deepl.com/*",
    "https://api-free.deepl.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "utils/language-detector.js",
        "utils/api-client.js",
        "content-scripts/remedy-injector.js"
      ],
      "css": [
        "ui-components/translation-modal.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ui-components/translation-modal.html",
        "ui-components/translation-modal.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
